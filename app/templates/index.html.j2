<html>
  <head>
  </head>
  <body>
    <div class="crop-container">

    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script src="http://foliotek.github.io/Croppie/croppie.js"></script>
    <script>
      $(document).ready(function(){
        $.get("http://localhost:5000/api/v1/raw/", function(d, s){
          if (d.filename)
          {
            var c = $('.crop-container').croppie({
              viewport: {width: 150, height: 200, type: 'square'},
              boundary: { width:500, height: 500},
              mouseWheelZoom: true
            });
            c.croppie('bind',{
              url: d.filename
            });
          }
        });
      });
    </script>
  </body>
</html>