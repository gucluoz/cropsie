{% extends 'bootstrap/base.html' %}

{% block styles %}
  {{ super() }}
  <link rel="Stylesheet" type="text/css" href="{{ url_for('static', filename='css/croppie.css') }}">
  <link rel="Stylesheet" type="text/css" href="{{ url_for('static', filename='css/main.css') }}">
{% endblock styles %}

{% block scripts %}
  {{ super() }}
  <script src="{{ url_for('static', filename='js/croppie.min.js') }}"></script>
  <script src="{{ url_for('static', filename='js/main.js') }}"></script>
  <script>
    $(document).ready(function(){Crop.init()});
  </script>
{% endblock scripts %}

{% block title %}Cropsie{% endblock title %}

{% block navbar %}
  <div class="navbar navbar-fixed-top">
  </div>
{% endblock navbar %}

{% block content %}
  <center>
    <div id="crop-container"></div>
    <div id="actions">
      <button class="btn-save" onclick="javascript:saveCrop()">Save!</button> | 
      <button class="btn-next" onclick="javascript:loadRandomImage()">Next</button>
    </div>
    <hidden id="rawId"></hidden>
  </center>
{% endblock content %}